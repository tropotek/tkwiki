{
  "name": "ttek/tkwiki",
  "type": "project",
  "description": "A simple WIKI/CMS for sharing content.",
  "keywords": [
    "tropotek",
    "wiki",
    "CMS"
  ],
  "time": "2024-09-01",
  "license": "GPL",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Tropotek",
      "homepage": "http://www.tropotek.com/"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/App/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Tk\\Composer\\Installer::postInstall"
    ],
    "post-update-cmd": [
      "Tk\\Composer\\Installer::postUpdate"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "8.0.x-dev"
    }
  },

  "require": {
    "php": "^8.2",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "ttek/tk-base": "~8.0.0",

    "components/jquery": "~3.6.0",
    "components/jqueryui": "~1.12.0",
    "components/font-awesome": "~6.2.0",
    "twbs/bootstrap": "~5.3.0",
    "select2/select2": "~4.0",
    "studio-42/elfinder": "~2.1.0",
    "mpdf/mpdf": "^8.0",
    "spomky-labs/otphp": "~11.2.0"

  },
  "require-dev": {
    "composer/composer": "^2.0",
    "zaproxy/php-owasp-zap-v2": "2.4.*@beta"
  },

  "config": {
    "preferred-install": {
      "ttek/*": "source"
    },
    "component-dir": "vendor/components",
    "allow-plugins": {
      "ttek/tk-installers": true
    }
  }
}
